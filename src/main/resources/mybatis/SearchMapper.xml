<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddwuproj.dao.SearchMapper">
    <select id="getCarTriageList" parameterType="String" resultType="com.ddwuproj.dto.CarTriage">
        select *
        from "CarTriage"
        <if test='arg0 != "전체"'>
        where sido=#{arg0}
        </if>
        <if test='arg1 != "" and arg1 != "전체"'>
            and gungu LIKE CONCAT('%', #{arg1}, '%')
        </if>
    </select>

    <select id="getClinicList" parameterType="String" resultType="com.ddwuproj.dto.Clinic">
        select *
        from "Clinic"
        <where>
        <if test='arg0 != "전체"'>
            and sido=#{arg0}
        </if>
        <if test='arg1 != "" and arg1 != "전체"'>
            and gungu LIKE CONCAT('%', #{arg1}, '%')
        </if>
        <if test='arg2 != "" and arg2 != "전체"'>
            and collect LIKE CONCAT('%', #{arg2}, '%')
        </if>
        </where>
    </select>

    <select id="getHospitalList" parameterType="String" resultType="com.ddwuproj.dto.Hospital">
        select *
        from "Hospital"
        <where>
        <if test='arg0 != "전체"'>
            and sido=#{arg0}
        </if>
        <if test='arg1 != "" and arg1 != "전체"'>
          and gungu LIKE CONCAT('%', #{arg1}, '%')
        </if>
        <if test='arg2 != "" and arg2 != "전체"'>
            and type LIKE CONCAT('%', #{arg2}, '%')
        </if>
        </where>
    </select>

    <select id="getTriageList" parameterType="String" resultType="com.ddwuproj.dto.Triage">
        select *
        from "Triage"
        <if test='arg0 != "전체"'>
            where sido=#{arg0}
        </if>
        <if test='arg1 != "" and arg1 != "전체"'>
            and gungu LIKE CONCAT('%', #{arg1}, '%')
        </if>
    </select>



</mapper>